<!DOCTYPE html>

<!DOCTYPE html>
<html lang="en">

<head>
  <title><%= title %></title>
  <meta charset="utf-8">
  　
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%- include("../_share/fontawesome.ejs") %>
  <%- include("../_share/favicon.ejs") %>
  <%- include("../_share/stylesheets.ejs") %>
</head>

<body>

  <header class="text-center">
    <p>入力</p>
  </header>

  <main class="container">

    <div class="row">
      <form class="form">
        <%
          var errors = locals.errors || {};
          var original = locals.original || {};
        %>
        <select class="mb-3" id="user" name="user" value="<%= original.user %>">
          <option selected=""><%= original.user ? original.user : "ユーザー" %></option>
          <% for (var key in users) { %>
          <option value="<%= users[key].userName %>"><%= users[key].userName %></option>
          <% }; %>
        </select>
        <select class="mb-3" id="type" name="type" value="<%= original.type %>">
          <option selected=""><%= original.type ? original.type : "種類" %></option>
          <% for (var key in types) { %>
          <option value="<%= types[key].type_name %>"><%= types[key].type_name %></option>
          <% }; %>
        </select>
        <input class="mb-3" type="tel" maxlength="6" placeholder="日付を入力" id="month" name="month"
          value="<%= original.month ? original.month : moment().format('YYYYMM') %>">
        <input class="mb-3" type="tel" placeholder="金額を入力" id="cost" name="cost" value="<%= original.cost %>">
        <input type="submit" class="btn shadow btn-secondary btn-block" data-method="POST"
          data-action="/regist/posts/execute" value="登録">
      </form>
    </div>
  </main>

  <footer>
    <%- include("../_share/navbar.ejs") %>
  </footer>

  <%- include("../_share/javascripts.ejs") %>
  <script src="/javascripts/regist/regist.js"></script>
</body>

</html>